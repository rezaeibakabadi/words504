<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo5252"
    tools:context="com.example.words504.Main22Activity">

    <SeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_marginBottom="25dp"
        android:layout_height="40dp"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:paddingTop="30dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:paddingTop="30dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/bookmark2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="30dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/speach"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:layout_gravity="left"
            android:background="@drawable/microphone"
            android:backgroundTint="@color/red" />


        <TextView
            android:id="@+id/wordText"
            android:layout_width="wrap_content"
            android:textSize="35dp"
            android:padding="15dp"
            android:textAlignment="center"
            android:background="@drawable/costum2"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/meanText"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:padding="15dp"
            android:background="@drawable/costum3"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

        <TextView
            android:background="@drawable/costum3"
            android:id="@+id/spellText"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue" />

        <TextView
            android:background="@drawable/costum3"
            android:id="@+id/codingText"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/synonText"
            android:layout_width="wrap_content"
            android:textSize="39dp"
            android:padding="15dp"
            android:background="@drawable/costum2"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>